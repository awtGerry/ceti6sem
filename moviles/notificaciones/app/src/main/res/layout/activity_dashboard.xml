<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="310dp"
        android:layout_height="276dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo_foreground"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button_register_patient"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_fill"
        android:text="@string/text_register_patient"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_login"
        tools:ignore="Autofill,Deprecated,TextFields" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_fill"
        android:text="@string/text_logout"
        android:onClick="logout"
        android:editable="false"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_register_patient"
        tools:ignore="Autofill,Deprecated,LabelFor,TextFields" />
</androidx.constraintlayout.widget.ConstraintLayout>